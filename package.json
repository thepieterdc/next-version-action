{
  "name": "next-version-action",
  "description": "GitHub Action that calculates the next semver version.",
  "version": "1.0.0",
  "type": "module",
  "author": {
    "email": "pieterdeclercq@outlook.com",
    "name": "Pieter De Clercq",
    "url": "https://thepieterdc.github.io"
  },
  "homepage": "https://github.com/thepieterdc/next-version-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thepieterdc/next-version-action.git"
  },
  "keywords": [
    "actions"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier --write .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@github/local-action": "^6.0.0",
    "@jest/globals": "^30.1.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.52.0",
    "ts-jest": "^29.4.4",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
